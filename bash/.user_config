# Update code
function update(){
  sudo apt update
}

# Upgrade code
function upgrade(){
  sudo apt upgrade -y;
	# sudo snap refresh;
}

# Autoremvoe code
function autoremove(){
  sudo apt autoremove -y &&
  sudo apt autoclean &&
  sudo apt clean
}

# cd and ls in single command
function cd(){
  builtin cd "$@" &&  ls -A
}

function mkcd(){
	mkdir $1 && cd $1
}